<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.fragment.app.FragmentContainerView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/topFragmentContainerView"
        app:layout_constraintTop_toTopOf="parent"
        android:name="com.agrongemajli.k2023_02_21a.Top_Fragment"
        tools:layout="@layout/fragment_top_">

    </androidx.fragment.app.FragmentContainerView>

    <androidx.fragment.app.FragmentContainerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/topFragmentContainerView"
        app:layout_constraintBottom_toBottomOf="parent"
        android:name="com.agrongemajli.k2023_02_21a.Bott"
        tools:layout="@layout/fragment_bottom_">

    </androidx.fragment.app.FragmentContainerView>

</androidx.constraintlayout.widget.ConstraintLayout>